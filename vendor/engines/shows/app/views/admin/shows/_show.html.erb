<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(show) -%>">
  <span class='title'>
    <%= show.name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), show_path(show),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_show_path(show),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_show_path(show),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => show.name),
        :method => :delete %>
  </span>
</li>
